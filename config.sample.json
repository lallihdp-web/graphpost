{
  "server": {
    "host": "0.0.0.0",
    "port": 8080,
    "enable_playground": true,
    "enable_introspection": true,
    "request_timeout": "60s",
    "max_connections": 1000
  },
  "database": {
    "host": "localhost",
    "port": 5432,
    "user": "postgres",
    "password": "postgres",
    "database": "mydb",
    "ssl_mode": "disable",
    "max_open_conns": 50,
    "max_idle_conns": 10,
    "conn_max_lifetime": "30m",
    "schema": "public"
  },
  "auth": {
    "enabled": false,
    "admin_secret": "",
    "jwt_secret": "",
    "jwt_algorithm": "HS256",
    "jwt_claims_namespace": "https://graphpost.io/jwt/claims",
    "unauthorized_role": "anonymous",
    "allowed_roles": ["user", "admin"],
    "default_role": "user",
    "webhook_url": ""
  },
  "console": {
    "enabled": true,
    "assets_path": "./console"
  },
  "events": {
    "enabled": true,
    "http_pool_size": 100,
    "fetch_interval": "1s",
    "retry_limit": 3,
    "retry_intervals": [10, 30, 60],
    "enable_manual_trigger": true
  },
  "cors": {
    "enabled": true,
    "allowed_origins": ["*"],
    "allowed_methods": ["GET", "POST", "OPTIONS"],
    "allowed_headers": ["Content-Type", "Authorization", "X-Admin-Secret"],
    "allow_credentials": true,
    "max_age": 86400
  }
}
